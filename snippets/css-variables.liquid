{% style %}
  {% comment %} Heading font — serif for editorial contrast {% endcomment %}
  {{ settings.type_heading_font | font_face: font_display: 'swap' }}
  {{ settings.type_heading_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}

  {% comment %} Body font — clean sans-serif {% endcomment %}
  {{ settings.type_primary_font | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.type_primary_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}

  :root {
    /* Progressive enhancement: smooth intrinsic size transitions */
    interpolate-size: allow-keywords;

    /* ——— Heading font (serif) ——— */
    --font-heading: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
    --font-heading-weight: {{ settings.type_heading_font.weight }};
    --font-heading-style: {{ settings.type_heading_font.style }};

    /* ——— Body font (sans) ——— */
    --font-body: {{ settings.type_primary_font.family }}, {{ settings.type_primary_font.fallback_families }};
    --font-body-weight: {{ settings.type_primary_font.weight }};

    /* ——— Type scale (fluid) ——— */
    --text-2xs: 0.6875rem;
    --text-xs: 0.75rem;
    --text-sm: 0.875rem;
    --text-base: 1rem;
    --text-md: 1.125rem;
    --text-lg: 1.25rem;
    --text-xl: clamp(1.25rem, 2vw, 1.5rem);
    --text-2xl: clamp(1.5rem, 2.5vw, 2rem);
    --text-3xl: clamp(1.75rem, 3vw, 2.5rem);
    --text-4xl: clamp(2rem, 4vw, 3.25rem);
    --text-5xl: clamp(2.5rem, 5vw, 4rem);

    /* ——— Leading & tracking ——— */
    --leading-none: 1;
    --leading-tight: 1.1;
    --leading-snug: 1.3;
    --leading-normal: 1.65;
    --tracking-tighter: -0.03em;
    --tracking-tight: -0.015em;
    --tracking-normal: 0;
    --tracking-wide: 0.06em;
    --tracking-wider: 0.1em;
    --tracking-widest: 0.18em;

    /* ——— Layout ——— */
    --page-width: {{ settings.max_page_width }};
    --page-margin: {{ settings.min_page_margin }}px;

    /* ——— Color: Warm Nordic palette ——— */
    --color-bg: {{ settings.background_color }};
    --color-text: {{ settings.foreground_color }};
    --color-accent: {{ settings.accent_color }};

    --color-linen: #F0EBE3;
    --color-parchment: #F7F4EF;
    --color-sand: #E4DDD3;
    --color-stone: #D1CABF;
    --color-driftwood: #A69E93;
    --color-iron: #7A7570;
    --color-ink: #1C1C1C;

    --color-forest: #3D5A3D;
    --color-forest-light: #4A6B4A;
    --color-brass: #B8956A;
    --color-sienna: #A0522D;

    /* ——— Spacing ——— */
    --space-1: 0.25rem;
    --space-2: 0.5rem;
    --space-3: 0.75rem;
    --space-4: 1rem;
    --space-5: 1.25rem;
    --space-6: 1.5rem;
    --space-8: 2rem;
    --space-10: 2.5rem;
    --space-12: 3rem;
    --space-16: 4rem;
    --space-20: 5rem;
    --space-24: 6rem;
    --space-32: 8rem;

    /* ——— Borders ——— */
    --radius-none: 0;
    --radius-sm: 2px;
    --border-color: var(--color-stone);
    --style-border-radius-inputs: {{ settings.input_corner_radius }}px;

    /* ——— Shadows ——— */
    --shadow-subtle: 0 1px 3px rgba(28, 28, 28, 0.04);
    --shadow-md: 0 4px 20px rgba(28, 28, 28, 0.07);
    --shadow-lg: 0 12px 40px rgba(28, 28, 28, 0.10);

    /* ——— Motion ——— */
    --ease-out-expo: cubic-bezier(0.16, 1, 0.3, 1);
    --ease-out-quart: cubic-bezier(0.25, 1, 0.5, 1);
    --ease-spring: cubic-bezier(0.34, 1.56, 0.64, 1);
    --ease-smooth: cubic-bezier(0.4, 0, 0.2, 1);
    --duration-fast: 180ms;
    --duration-normal: 350ms;
    --duration-slow: 600ms;
    --duration-slower: 900ms;
  }
{% endstyle %}
