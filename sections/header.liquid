<header class="header">
  <h2 class="header__title">
    {{ shop.name | link_to: routes.root_url }}
  </h2>

  <nav class="header__menu" aria-label="Main navigation">
    {% for link in section.settings.menu.links %}
      {{ link.title | link_to: link.url }}
    {% endfor %}
  </nav>

  <div class="header__icons">
    {% if shop.customer_accounts_enabled %}
      <a href="{{ routes.account_url }}" aria-label="Account">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
      </a>
    {% endif %}

    <a href="{{ routes.cart_url }}" aria-label="Cart ({{ cart.item_count }} items)" class="header__cart-link">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/><line x1="3" y1="6" x2="21" y2="6"/><path d="M16 10a4 4 0 0 1-8 0"/></svg>
      {% if cart.item_count > 0 %}
        <span class="cart-count">{{ cart.item_count }}</span>
      {% endif %}
    </a>
  </div>
</header>

{% stylesheet %}
  .header {
    height: 4rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 var(--page-margin);
    border-bottom: 1px solid var(--color-sand);
    background: var(--color-bg);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  @media (min-width: 1024px) {
    .header {
      height: 5rem;
      padding: 0 var(--space-8);
    }
  }

  .header a {
    position: relative;
    text-decoration: none;
    color: var(--color-ink);
    transition: opacity var(--duration-fast) var(--ease-smooth);
  }

  .header a:hover {
    opacity: 0.6;
  }

  .header__title {
    font-family: var(--font-heading);
    font-weight: var(--font-heading-weight);
    font-style: var(--font-heading-style);
    font-size: var(--text-md);
    letter-spacing: var(--tracking-wide);
    text-transform: uppercase;
    margin: 0;
  }

  .header__title a {
    text-decoration: none;
    color: var(--color-ink);
  }

  .header svg {
    width: 1.25rem;
    height: 1.25rem;
    color: var(--color-ink);
  }

  .header__menu,
  .header__icons {
    display: flex;
    align-items: center;
    gap: var(--space-6);
  }

  .header__menu a {
    font-family: var(--font-body);
    font-size: var(--text-xs);
    font-weight: 500;
    letter-spacing: var(--tracking-widest);
    text-transform: uppercase;
    color: var(--color-iron);
    position: relative;
  }

  .header__menu a::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 1px;
    background: var(--color-ink);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform var(--duration-normal) var(--ease-out-expo);
  }

  .header__menu a:hover {
    opacity: 1;
    color: var(--color-ink);
  }

  .header__menu a:hover::after {
    transform: scaleX(1);
    transform-origin: left;
  }

  .header__cart-link {
    display: flex;
    align-items: center;
    gap: var(--space-1);
  }

  .cart-count {
    font-family: var(--font-body);
    font-size: var(--text-xs);
    font-weight: 500;
    color: var(--color-forest);
    min-width: 1rem;
    text-align: center;
  }

  @media (max-width: 767px) {
    .header__menu {
      display: none;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
