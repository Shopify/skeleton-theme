<footer class="border-t-4 border-purple-600" style="background: linear-gradient(135deg, #0a0a1a 0%, #1a0a2a 100%);">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      
      <!-- Brand Section -->
      <div class="space-y-6">
        <div class="flex items-center space-x-3">
          {% if section.settings.logo != blank %}
            <img src="{{ section.settings.logo | img_url: '200x' }}" alt="{{ section.settings.brand_name | default: shop.name }}" class="h-8 w-auto">
          {% else %}
            <div style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #d946ef 100%); border-radius: 12px; padding: 4px;">
              <div style="background: linear-gradient(135deg, #1a1a3a 0%, #2a2a4a 100%); border-radius: 8px; padding: 8px;">
                <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                </svg>
              </div>
            </div>
          {% endif %}
          <h3 class="text-2xl font-bold" style="font-family: 'Oswald', sans-serif; text-transform: uppercase; letter-spacing: 0.05em; background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #d946ef 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
            {{ section.settings.brand_name | default: shop.name }}
          </h3>
        </div>
        <p class="text-gray-300 font-semibold leading-relaxed">
          {{ section.settings.description }}
        </p>
        <div class="flex space-x-4">
          {% if section.settings.twitter_url != blank %}
            <a href="{{ section.settings.twitter_url }}" class="w-12 h-12 bg-purple-600 rounded-lg flex items-center justify-center border-2 border-purple-500 transition-all hover:bg-white hover:text-black" target="_blank" rel="noopener">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/></svg>
            </a>
          {% endif %}
          {% if section.settings.instagram_url != blank %}
            <a href="{{ section.settings.instagram_url }}" class="w-12 h-12 bg-purple-600 rounded-lg flex items-center justify-center border-2 border-purple-500 transition-all hover:bg-white hover:text-black" target="_blank" rel="noopener">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M22.46 6c-.77.35-1.6.58-2.46.69.88-.53 1.56-1.37 1.88-2.38-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29 0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15 0 1.49.75 2.81 1.91 3.56-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07 4.28 4.28 0 0 0 4 2.98 8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21 16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56.84-.6 1.56-1.36 2.14-2.23z"/></svg>
            </a>
          {% endif %}
          {% if section.settings.pinterest_url != blank %}
            <a href="{{ section.settings.pinterest_url }}" class="w-12 h-12 bg-purple-600 rounded-lg flex items-center justify-center border-2 border-purple-500 transition-all hover:bg-white hover:text-black" target="_blank" rel="noopener">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.099.12.112.225.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.758-1.378l-.749 2.848c-.269 1.045-1.004 2.352-1.498 3.146 1.123.345 2.306.535 3.55.535 6.624 0 11.99-5.367 11.99-11.987C24.007 5.367 18.641.001 12.017.001z"/></svg>
            </a>
          {% endif %}
        </div>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-black text-white mb-6" style="font-family: 'Oswald', sans-serif; text-transform: uppercase; letter-spacing: 0.05em;">
          {{ section.settings.quick_links_heading }}
        </h4>
        <ul class="space-y-3">
          {% for link in section.settings.quick_links.links %}
            <li><a href="{{ link.url }}" class="text-gray-300 hover:text-white transition-colors font-semibold">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
      
      <!-- Customer Service -->
      <div>
        <h4 class="text-lg font-black text-white mb-6" style="font-family: 'Oswald', sans-serif; text-transform: uppercase; letter-spacing: 0.05em;">
          {{ section.settings.customer_links_heading }}
        </h4>
        <ul class="space-y-3">
          {% for link in section.settings.customer_links.links %}
            <li><a href="{{ link.url }}" class="text-gray-300 hover:text-white transition-colors font-semibold">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
      
      <!-- Newsletter -->
      <div>
        <h4 class="text-lg font-black text-white mb-6" style="font-family: 'Oswald', sans-serif; text-transform: uppercase; letter-spacing: 0.05em;">
          {{ section.settings.newsletter_heading }}
        </h4>
        <p class="text-gray-300 mb-6 font-semibold">
          {{ section.settings.newsletter_text }}
        </p>
        {% form 'customer', id: 'newsletter-form' %}
          <input type="email" name="contact[email]" placeholder="Enter your email" required class="w-full bg-gray-700 text-white px-4 py-3 placeholder-gray-400 border border-purple-600 focus:border-purple-400 outline-none" style="border-radius: 6px;">
          <button type="submit" class="w-full bg-purple-600 text-white py-3 font-black transition-colors hover:bg-purple-500 mt-4" style="font-family: 'Oswald', sans-serif; text-transform: uppercase; letter-spacing: 0.05em; border-radius: 6px;">
            {{ section.settings.newsletter_button_text }}
          </button>
        {% endform %}
      </div>
    </div>
    
    <!-- Bottom Section -->
    <div class="border-t border-gray-600 mt-12 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-gray-400 text-sm font-semibold">
          Â© {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text }}
        </p>
        <div class="flex space-x-6">
          {% for link in section.settings.legal_links.links %}
            <a href="{{ link.url }}" class="text-gray-400 hover:text-white text-sm font-semibold transition-colors">{{ link.title }}</a>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Logo" },
    { "type": "text", "id": "brand_name", "label": "Brand Name", "default": "LOOKS MAX" },
    { "type": "textarea", "id": "description", "label": "Brand Description", "default": "Your ultimate destination for premium men's skincare in Czech Republic. Purify. Balance. Glow." },
    { "type": "url", "id": "twitter_url", "label": "Twitter URL" },
    { "type": "url", "id": "instagram_url", "label": "Instagram URL" },
    { "type": "url", "id": "pinterest_url", "label": "Pinterest URL" },
    { "type": "text", "id": "quick_links_heading", "label": "Quick Links Heading", "default": "QUICK LINKS" },
    { "type": "link_list", "id": "quick_links", "label": "Quick Links Menu", "default": "main-menu" },
    { "type": "text", "id": "customer_links_heading", "label": "Customer Service Heading", "default": "CUSTOMER SERVICE" },
    { "type": "link_list", "id": "customer_links", "label": "Customer Service Menu", "default": "main-menu" },
    { "type": "text", "id": "newsletter_heading", "label": "Newsletter Heading", "default": "STAY UPDATED" },
    { "type": "textarea", "id": "newsletter_text", "label": "Newsletter Text", "default": "Get the latest skincare tips and exclusive offers delivered to your inbox." },
    { "type": "text", "id": "newsletter_button_text", "label": "Newsletter Button Text", "default": "SUBSCRIBE" },
    { "type": "text", "id": "copyright_text", "label": "Copyright Text", "default": "All rights reserved." },
    { "type": "link_list", "id": "legal_links", "label": "Legal Links Menu", "default": "main-menu" }
  ],
  "presets": [
    { "name": "Footer" }
  ]
}
{% endschema %}
